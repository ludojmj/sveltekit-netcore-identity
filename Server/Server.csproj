    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AspNetCoreAnalyzers" Version="0.3.0" />
    <PackageReference Include="Moq.Analyzers" Version="0.1.0" />
    <PackageReference Include="Meziantou.Analyzer" Version="2.0.155" />
